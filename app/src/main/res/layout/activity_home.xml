<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    tools:context=".event.HomeActivity">

<RelativeLayout
    android:id="@+id/upper_bg"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    style="@style/LinearColor">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:hint="@string/change_city"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        >

        <AutoCompleteTextView
            android:id="@+id/city_complete_txt"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:inputType="none"
            android:padding="10dp"
            tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/ico_notices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:importantForAccessibility="no"
        android:onClick="goToNotices"
        android:src="@drawable/ico_notices"
        style="@style/ButtonForLabelColor"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</RelativeLayout>

<!--    <ScrollView-->
<!--        android:id="@+id/scrollView2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_above="@id/linearLayout2"-->
<!--        android:layout_below="@+id/upper_bg"-->
<!--        android:layout_marginTop="2dp"-->
<!--        android:layout_marginBottom="-2dp">-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchEvent"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="20dp"
                app:iconifiedByDefault="false"
                app:queryHint="Поиск мероприятия" />

<!--            <CalendarView-->
<!--                android:id="@+id/calendar_events"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="348dp"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_marginStart="42dp"-->
<!--                android:layout_marginTop="150dp"-->
<!--                android:layout_marginEnd="36dp" />-->
            <TextView
                android:id="@+id/no_events_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/searchEvent"
                android:text="@string/no_events_in_city"
                style="TextColor"
                android:visibility="gone"
             />

            <ListView
                android:id="@+id/eventsListView"
                android:layout_width="wrap_content"
                android:layout_height="450dp"
                android:layout_above="@id/linearLayout2"
                android:layout_below="@+id/searchEvent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                tools:ignore="NestedScrolling,NotSibling"
                tools:listItem="@layout/event_item"
                />

        </RelativeLayout>

<!--    </ScrollView>-->

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/LinearColor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            style="@style/ButtonForLabelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:importantForAccessibility="no"
            android:onClick="goToNews"
            android:src="@drawable/ico_news"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            style="@style/ButtonForLabelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:onClick="goToSaved"
            android:src="@drawable/ico_saved" />

        <ImageButton
            style="@style/ButtonSelectedForLabelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ico_home_black"
            android:importantForAccessibility="no"
            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

        <ImageButton
            style="@style/ButtonForLabelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:onClick="goToChat"
            android:src="@drawable/ico_chat"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            style="@style/ButtonForLabelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:importantForAccessibility="no"
            android:onClick="goToProfile"
            android:src="@drawable/ico_user"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>



</RelativeLayout>